generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Team {
  id         Int      @id @default(autoincrement())
  name       String
  players    Player[]
  scores     Score[]

  matchesAsTeam1  Match[] @relation("Team1")
  matchesAsTeam2  Match[] @relation("Team2")
  matchesWon      Match[] @relation("WinnerTeam")

  matchStats MatchPlayerStats[]

}


model Player {
  id      Int    @id @default(autoincrement())
  name    String
  teamId  Int
  team    Team   @relation(fields: [teamId], references: [id])

  matchStats MatchPlayerStats[]

}

model Match {
  id           Int     @id @default(autoincrement())
  team1Id      Int
  team2Id      Int
  oversLimit   Int
  winnerTeamId Int?

  team1        Team     @relation("Team1", fields: [team1Id], references: [id])
  team2        Team     @relation("Team2", fields: [team2Id], references: [id])
  winnerTeam   Team?    @relation("WinnerTeam", fields: [winnerTeamId], references: [id])

  scores       Score[]
playerStats MatchPlayerStats[]

}


model Score {
  id      Int   @id @default(autoincrement())
  matchId Int
  teamId  Int
  runs    Int   @default(0)
  wickets Int   @default(0)
  overs   Int   @default(0)
  balls   Int   @default(0)

  match   Match @relation(fields: [matchId], references: [id])
  team    Team  @relation(fields: [teamId], references: [id])
}

model MatchPlayerStats {
  id            Int    @id @default(autoincrement())
  matchId       Int
  playerId      Int
  teamId        Int

  runsScored    Int    @default(0)
  singles       Int    @default(0)
  doubles       Int    @default(0)
  triples       Int    @default(0)
  fours         Int    @default(0)
  sixes         Int    @default(0)
  wicketsTaken  Int    @default(0)
  economy       Float  @default(0)
  numberOfOvers Float  @default(0)
  battingStatus String @default("not_batting")
  strikeRate    Float  @default(0)
  numberOfBalls Int    @default(0)

  match  Match  @relation(fields: [matchId], references: [id])
  player Player @relation(fields: [playerId], references: [id])
  team   Team   @relation(fields: [teamId], references: [id])

}
